    "n= int(input())\n",
    "\n",
    "for i in range(n):\n",
    "    xy= input().split()\n",
    "    s=0\n",
    "    counter=0\n",
    "    sum=0\n",
    "    while counter < int(xy[1]):\n",
    "        temp= int(xy[0])+s\n",
    "        if temp %2 == 1:\n",
    "            sum +=temp\n",
    "            counter+=1\n",
    "        s+=1\n",
    "    print(sum)\n"
   ]
